# vim: filetype=sh

# Note: commented functions are optional.

# system-type=installer option support requires:
# 1- target_use_lvm() to echo true
# 2- target_get_bootloader_install_command() to echo
#    an appropriate command (e.g. grub-install)

target_use_lvm() {
    echo false
}

