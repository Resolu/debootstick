# vim: filetype=sh

custom_packages()
{
    echo grub-pc
}

kernel_default_package()
{
    # * ubuntu: linux-image-generic
    # * debian on i386: linux-image-686-pae
    # * debian on amd64: linux-image-amd64
    case "$target_arch" in
    "amd64")
        echo "linux-image-((generic)|(amd64))"
        ;;
    "i386")
        echo "linux-image-((generic)|(686-pae))"
        ;;
    esac
}
